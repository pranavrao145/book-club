<div class="container mt-5">
  <% unless @reviews.empty? %>
    <div class="d-flex">
      <div>
        <h1 class="mt-1 mb-3">Your Reviews</h1>
      </div>
      <div class="ms-auto">
        <%= link_to "Back", :back, class: "btn btn-light"%>
      </div>
    </div>
    <% @reviews.each do |review| %>
      <div class="card mb-3">
        <div class="card-body">
          <div class="d-flex">
            <div>
              <h3 class="card-title"> 
                <%= truncate review.title, length: 50, separator: /\s/ %>
              </h3>
            </div>
            <div class="ms-auto">
              <h5 class="text-muted">
                <%= review.created_at.strftime("%B %d, %Y at %-I:%M %p") %> 
              </h5>
            </div>
          </div>
          <h5 class="card-subtitle mb-2 text-muted">
            Book: <%= review.book_name %>
          </h5>
          <p class="card-text">
          <%= truncate review.content, length: 500, separator: /\s/ %>
          </p>
          <%= link_to "View Review", review_path(book_id: review.gbook_id, review_id: review.id), class: "btn btn-primary" %>
          <%= link_to "View Book", view_path(book_id: review.gbook_id), class: "btn btn-primary"%>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="mt-5">
      <h3 class="text-center">
        You don't have any reviews yet.
      </h3>
      <h5 class="text-center text-muted">
        Click on the navbar button to get started.
      </h5>
    </div>
  <% end %>
</div>
