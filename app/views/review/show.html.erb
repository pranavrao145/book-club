<div class="container mt-5">
  <div class="content-section">
    <div class="d-flex mb-2">
      <div>
        <h1>
          <%= @review.title %>
        </h1>
      </div>
      <div class="ms-auto">
        <% if user_signed_in? %>
          <% if @review.author_id == current_user.id %>
            <%= link_to "Delete Review", review_path(book_id: @review.gbook_id, id: @review.id), method: :delete, data: {confirm: 'Are you sure you want to delete this review?'}, class: "btn btn-danger" %>
          <% end %>
        <% end %>
        <%= link_to "View Book", view_path(book_id: @review.gbook_id), class: "btn btn-primary"%>
        <%= link_to "Back", :back, class: "btn btn-light"%>
      </div>
    </div>

    <h5 class="text-muted">
      <b>Created on:</b> <%= @review.created_at.strftime("%B %d, %Y at %-I:%M %p") %></br>
      <b>By:</b> <%= @review.author.username %></br>
      <b>Rating: </b> <%= @review.rating %>
    </h5>
    <%= @review.content %>
    </p>
  </div>
</div>
