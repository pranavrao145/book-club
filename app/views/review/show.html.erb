<div class="container mt-5">
  <div class="card mb-3">
    <div class="card-body">
      <h1 class="card-title"> 
        <%= @review.title %>
      </h1>
      <h3 class="card-subtitle mb-3 text-muted">
        Written by: <%= @review.author.username %></br>
        Written on: <%= @review.created_at.strftime("%B %d, %Y at %-I:%M %p") %> 
      </h3>
      <p class="card-text">
      <%= @review.content %>
      </p>
      <% if user_signed_in? %>
        <% if @review.author_id == current_user.id %>
          <%= link_to "Delete Review", review_path(book_id: @review.gbook_id, id: @review.id), method: :delete, data: {confirm: 'Are you sure you want to delete this review?'}, class: "btn btn-danger" %>
          <%= link_to "Edit Review", edit_review_path(book_id: @review.gbook_id, id: @review.id), class: "btn btn-primary" %>
        <% end %>
      <% end %>
      <%= link_to "Back", :back, class: "btn btn-light"%>
    </div>
  </div>
</div>
