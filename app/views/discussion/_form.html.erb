<%= form_with model: @discussion do |f| %>
      <div class="mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, autocomplete: "title", class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= f.label :content, class: "form-label" %>
        <%= f.text_area :content, autocomplete: "content", class: "form-control", required: true %>
      </div>
      <div class="mb-3">
        <%= f.submit "Start Discussion", class: "btn btn-primary"%>
      </div>
<% end %>

