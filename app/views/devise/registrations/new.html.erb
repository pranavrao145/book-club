<div class="container mt-5">
  <h2>Sign up</h2>

  <div class="content-section">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <% if resource.errors[:email].any? %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control is-invalid" %>
          <div class="invalid-feedback">
            <% resource.errors[:email].each do |error| %>
              Email <%= error %>
            <% end %>
          </div>
        <% else %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :username, class: "form-label" %>
        <% if resource.errors[:username].any? %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control is-invalid" %>
          <div class="invalid-feedback">
            <% resource.errors[:username].each do |error| %>
              Username <%= error %>
            <% end %>
          </div>
        <% else %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <% if resource.errors[:password].any? %>
          <%= f.password_field :password, autofocus: true, autocomplete: "New Password", class: "form-control is-invalid" %>
          <div class="invalid-feedback">
            <% resource.errors[:password].each do |error| %>
              Password <%= error %>
            <% end %>
          </div>
        <% else %>
          <%= f.password_field :password, autofocus: true, autocomplete: "New Password", class: "form-control" %>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <% if resource.errors[:password_confirmation].any? %>
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "New Password", class: "form-control is-invalid" %>
          <div class="invalid-feedback">
            <% resource.errors[:password_confirmation].each do |error| %>
              Password <%= error %>
            <% end %>
          </div>
        <% else %>
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "New Password", class: "form-control" %>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <%= render "devise/shared/links" %>
</div>
